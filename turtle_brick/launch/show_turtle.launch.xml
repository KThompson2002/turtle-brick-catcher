<launch>

  <!-- This robot state publisher is included if the specified robot is not slide -->
  <node pkg="robot_state_publisher" exec="robot_state_publisher">
    <!-- load the urdf into the parameter server -->
    <!-- A plain urdf file is also a valid xacro file so we use xacro here for convenience only -->
    <param name="robot_description" value="$(command '$(exec-in-pkg xacro xacro) $(find-pkg-share turtle_brick)/urdf/turtle_bot.urdf.xacro')" />
  </node>

  <node pkg="joint_state_publisher_gui" exec="joint_state_publisher_gui"/>

  <!-- rviz will enable us to see the robot -->
  <node pkg="rviz2" exec="rviz2" args="-d $(find-pkg-share turtle_brick)/view_robot.rviz"/>

</launch>